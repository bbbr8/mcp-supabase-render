{
  "openapi": "3.0.3",
  "info": {
    "title": "Supabase Tools",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "https://supabase-mcp-server-mbjsolar.replit.app"
    }
  ],
  "paths": {
    "/tools/supabase_select": {
      "post": {
        "summary": "Select rows",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SupabaseSelectRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    },
    "/tools/supabase_insert": {
      "post": {
        "summary": "Insert rows",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SupabaseInsertRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "integer"
      },
      "SupabaseSelectRequest": {
        "type": "object",
        "required": ["table", "columns"],
        "properties": {
          "table": {
            "type": "string",
            "description": "The name of the table to query."
          },
          "columns": {
            "type": "array",
            "description": "The columns to select.",
            "items": {
              "type": "string"
            }
          },
          "order": {
            "type": "object",
            "description": "The order of the rows returned.",
            "properties": {
              "column": {
                "$ref": "#/components/schemas/Order"
              },
              "direction": {
                "type": "string",
                "enum": ["asc", "desc"]
              }
            }
          },
          "limit": {
            "type": "integer",
            "description": "Limits the number of rows returned."
          }
        }
      },
      "SupabaseInsertRequest": {
      "type": "object",
      "required": ["table", "rows"],
      "properties": {
        "table": {
          "type": "string",
          "description": "The table you want to insert into."
        },
        "rows": {
          "type": "array",
          "description": "The data you want to insert",
          "items": {
            "type": "object"
          }
        },
        "columns": {
          "type": "array",
          "description": "The columns you want to insert into",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
